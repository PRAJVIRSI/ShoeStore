@model ShoeStore_Group9.Models.Category

<h2>Edit Category</h2>

<form method="post" action="@Url.Action("EditCategory", "Admin", new { id = Model.CategoryID })">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" name="CategoryID" value="@Model.CategoryID" /> <!-- Ensure the CategoryID is passed -->

    <div class="form-group">
        <label for="categoryName">Category Name:</label>
        <input type="text" id="categoryName" name="CategoryName" value="@Model.CategoryName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="Description" class="form-control" required>@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
