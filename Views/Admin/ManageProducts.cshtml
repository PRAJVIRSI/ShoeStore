@model Tuple<IEnumerable<ShoeStore_Group9.Models.Product>, IEnumerable<ShoeStore_Group9.Models.Category>>

<div class="container mt-5">
    <h2>Manage Products</h2>

    <a href="@Url.Action("CreateProduct", "Admin")" class="btn btn-primary mb-3">Add New Product</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Item1)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Category?.CategoryName</td>
                    <td>$@product.Price</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <img src="@Url.Content(product.ImageURL)" alt="@product.Name" style="width: 50px; height: auto;">
                    </td>
                    <td>
                        <a href="@Url.Action("EditProduct", new { id = product.ProductID })" class="btn btn-warning">Edit</a>
                        <form method="post" action="@Url.Action("DeleteProduct", new { id = product.ProductID })" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <h2>Manage Categories</h2>

    <a href="@Url.Action("CreateCategory", "Admin")" class="btn btn-primary mb-3">Add New Category</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Item2)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <td>
                        <a href="@Url.Action("EditCategory", new { id = category.CategoryID })" class="btn btn-warning">Edit</a>
                        <form method="post" action="@Url.Action("DeleteCategory", new { id = category.CategoryID })" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
