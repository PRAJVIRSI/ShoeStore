@model ShoeStore_Group9.Models.Product

@{
    string formAction = Url.Action((string)ViewBag.Action, "Admin", new { id = Model.ProductID });
}

<h2>@ViewBag.Title</h2>

<form method="post" action="@formAction">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" value="@Model.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="Description" class="form-control" required>@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" id="price" name="Price" value="@Model.Price" class="form-control" step="0.01" required />
    </div>
    <div class="form-group">
        <label for="stock">Stock Quantity:</label>
        <input type="number" id="stock" name="StockQuantity" value="@Model.StockQuantity" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="category">Category:</label>
        @Html.DropDownListFor(m => m.CategoryID, new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"), "-- Select Category --", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="image">Image URL:</label>
        <input type="text" id="image" name="ImageURL" value="@Model.ImageURL" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">@ViewBag.ButtonText</button>
</form>
