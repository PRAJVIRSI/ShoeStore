@model IEnumerable<ShoeStore_Group9.Models.Product>

<div class="container mt-5">
    <h2>Our Products</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@Url.Content(product.ImageURL)" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>Price: $@product.Price</strong></p>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
